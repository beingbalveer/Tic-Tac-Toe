<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    tools:context="com.example.android.tictactoe.MainActivity">


    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="#999"
        android:onClick="start"/>


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:background="#ddd"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/image11"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:scaleType="fitXY"
            android:padding="16dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="click1" />

        <ImageButton
            android:id="@+id/image12"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:layout_marginTop="0dp"
            android:background="#666"
            android:scaleType="fitXY"
            android:onClick="click1"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/image13"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"
            android:onClick="click1"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/image21"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:onClick="click1"
            android:layout_margin="2dp"
            android:layout_marginLeft="0dp"
            android:scaleType="fitXY"
            android:padding="16dp"/>

        <ImageButton
            android:id="@+id/image22"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="click1"
            android:background="#666"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/image23"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:onClick="click1"
            android:layout_marginRight="0dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:padding="16dp"/>

        <ImageButton
            android:id="@+id/image31"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:scaleType="fitXY"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:onClick="click1"
            android:padding="16dp"/>

        <ImageButton
            android:id="@+id/image32"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:layout_margin="2dp"
            android:layout_marginBottom="0dp"
            android:scaleType="fitXY"
            android:onClick="click1"
            android:padding="16dp"/>

        <ImageButton
            android:id="@+id/image33"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#666"
            android:onClick="click1"
            android:scaleType="fitXY"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:padding="16dp" />

    </GridLayout>

</FrameLayout>
